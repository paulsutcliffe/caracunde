= form_for(@contato) do |f|

  - if @contato.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.contato.invalid_record')
      %ul
      - @contato.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :nome
    %br
    = f.text_field :nome
  .field
    = f.label :email, "E-mail"
    %br
    = f.text_field :email
  .field
    = f.label :telefone
    %br
    = f.text_field :telefone
  .field
    = f.label :mensagem
    %br
    = f.text_area :mensagem

  .actions
    = f.submit I18n.t('send')
