= form_for(@informacao) do |f|

  - if @informacao.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.informacao.invalid_record')
      %ul
      - @informacao.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :seo_text
    %br
    = f.text_area :seo_text
  .field
    = f.label :telefone
    %br
    = f.text_field :telefone
  .field
    = f.label :descricao
    %br
    = f.text_area :descricao
  .field
    = f.label :frases_chave
    %br
    = f.text_field :frases_chave
  .field
    = f.label :video
    %br
    = f.text_field :video

  .actions
    = f.submit I18n.t('submit')
