- form_for(@integrante) do |f|
  
  - if @integrante.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.integrante.invalid_record')
      %ul
      - @integrante.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :nome
    %br
    = f.text_field :nome
  .field
    = f.label :descricao
    %br
    = f.text_area :descricao
  .field
    = f.label :pais
    %br
    = f.text_field :pais

  .actions
    = f.submit I18n.t('submit')
