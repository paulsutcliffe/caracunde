= form_for(@integrante, :html => { :multipart => true }) do |f|

  - if @integrante.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.integrante.invalid_record')
      %ul
      - @integrante.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :nome
    %br
    = f.text_field :nome
  .field
    = f.label :descricao
    %br
    = f.text_area :descricao
  .field
    = f.label :pais, "Pa√≠s"
    %br
    = f.select(:pais, options_for_select( ['peru', 'argentina', 'ecuador', 'paraguay', 'uruguay' ] ))
  .field
    = f.label :retrato, "Foto"
    %br
    = f.file_field :retrato

  .actions
    = f.submit I18n.t('submit')
