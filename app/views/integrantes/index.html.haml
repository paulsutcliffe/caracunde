#content.region.fancy.rotate-default
  .container
    %section.rotate-prevent
      %h2.title.sixteen.columns.alpha Integrantes
      
      - for integrante in @integrantes
        %article.sixteen.columns.alpha
          %figure.inner.eight.columns.omega
            = link_to image_tag('/images/images/img-integrante-index.jpg'), integrante
          .inner.eight.columns.alpha
            %header
              %h3
                = integrante.nome
            %div
              = integrante.pais
              = sanitize(simple_format(truncate(integrante.descricao, :length => 370, :omission => '...')), :tags => %w(p i br b))
          %footer
            = link_to t('show'), integrante, :class => 'btn see-more'



%h1 
  =t('integrantes.index.title')

%table
  %thead
    %tr
      %th 
        =t('activerecord.attributes.integrante.nome')
      %th 
        =t('activerecord.attributes.integrante.descricao')
      %th 
        =t('activerecord.attributes.integrante.pais')
      %th{ :colspan => 3 }
  
  %tbody
    - for integrante in @integrantes
      %tr{ :class => cycle(:odd, :even) }
        %td= integrante.nome
        %td= integrante.descricao
        %td= integrante.pais
        %td= link_to t('show'), integrante
        %td= link_to t('edit'), edit_integrante_path(integrante)
        %td= link_to t('destroy'), integrante, :confirm => I18n.t('confirm_delete'), :method => :delete

%br
= link_to t('integrante.new'), new_integrante_path
