#content.region
  .container
    %section
      %h2.title.sixteen.columns.alpha
        = @integrante.nome
      
      .share-links-type.eight.columns.alpha.omega
        .inner
          = render 'shared/social_links'        
      .sixteen.columns.alpha
        .figure.inner.eight.columns.omega
          = image_tag(@integrante.retrato(:medium))
        %div
          = @integrante.pais
          = sanitize(@integrante.descricao, :tags => %w(p i br b))
        .sixteen.columns.alpha
          #facebook-comments
            = render 'shared/facebook_comments'
        .footer
          = link_to t('back'), integrantes_path, :class => 'link back'
          = if current_usuario
            |
            = link_to t('edit'), edit_integrante_path(@integrante), :class => 'link back'
              



