!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "/stylesheets/base.css", "/stylesheets/skeleton.css", "/stylesheets/screen.css"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body{:id => bodyid, :class => bodyclass}
    %header.main
      #main-menu.container
        = render 'layouts/menu'
      .slider.rotate-default
        .flexslider.carousel
          %ul.slides.rotate-prevent-img
            %li.royalSlide
              = image_tag("/images/images/img-slide.jpg")
      #logo
        %h1#logo-wrapper.container
          %span Caracunde
          = link_to image_tag("/images/logo.png"), 'google', :class => 'eight columns'
              
    #main
      = yield
      
    #postscript-top.region.fancy.rotate-default.gallery-type
      .container.rotate-prevent
        %h6.title.sixteen.columns.omega Auspiciadores
        %ul
          %li.three.columns
            = link_to image_tag('/images/images/img-auspiciador-1.png')
      
    %footer.main.region.fancy.rotate-default
      .container.rotate-prevent
        .five.columns
          %p Brasil: (15) 91438743
          %br info@caracunde.com
        .six.columns.link-type
          %ul
            %li.facebook
              = link_to '', 'google.com'
            %li.twitter
              = link_to '', 'google.com'
            %li.rss
              = link_to '', 'google.com'
        .five.columns
          = image_tag('/images/logo-footer.png')
        #footer-bottom.sixteen.columns
          %p#copyright.eight.columns.alpha
            Caracunde 2012, Todos los derechos reservados.
          %span#author.eight.columns.omega
            web development and web design by 
            = link_to 'kosmyka', 'http://www.kosmyka.com', :target => '_blank'
      
      
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      - @slides.each do |slide|
        = image_tag(slide.slide(:medium))

      

      - @patrocinadores.each do |patrocinador|
        = link_to(image_tag(patrocinador.logo(:medium)), patrocinador.link)


      
   
    
      