= form_for(@post, :html => { :multipart => true }) do |f|

  - if @post.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.post.invalid_record')
      %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :titulo
    %br
    = f.text_field :titulo
  .field
    = f.label :conteudo
    %br
    = f.text_area :conteudo
  .field
    = f.label :data
    %br
    = f.date_select :data
  .field
    = f.label :imagen, "Foto"
    %br
    = f.file_field :imagen

  .actions
    = f.submit I18n.t('submit')
