- form_for(@post) do |f|
  
  - if @post.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.post.invalid_record')
      %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :titulo
    %br
    = f.text_field :titulo
  .field
    = f.label :conteudo
    %br
    = f.text_area :conteudo
  .field
    = f.label :data
    %br
    = f.date_select :data

  .actions
    = f.submit I18n.t('submit')
