= form_for(@slide, :html => { :multipart => true }) do |f|

  - if @slide.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.slide.invalid_record')
      %ul
      - @slide.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :slide, "Foto"
    %br
    = f.file_field :slide

  .actions
    = f.submit I18n.t('submit')
