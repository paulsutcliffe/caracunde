- form_for(@video) do |f|
  
  - if @video.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.video.invalid_record')
      %ul
      - @video.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :link
    %br
    = f.text_field :link

  .actions
    = f.submit I18n.t('submit')
